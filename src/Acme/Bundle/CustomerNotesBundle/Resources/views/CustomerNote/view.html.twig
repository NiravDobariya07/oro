{% extends '@OroUI/actions/view.html.twig' %}
{% import '@OroUI/macros.html.twig' as UI %}

{% block navButtons %}
    {% if is_granted('acme_customer_note_update', entity) %}
        {{ UI.button({
            'path' : path('acme_customer_note_update', { id: entity.id }),
            'label': 'Edit',
            'title': 'Edit Customer Note',
            'icon' : 'edit'
        }) }}
    {% endif %}
    {% if is_granted('acme_customer_note_delete', entity) %}
        {{ UI.deleteButton({
            'dataUrl': path('acme_customer_note_delete', { id: entity.id }),
            'dataRedirect': path('acme_customer_note_index'),
            'aCss': 'no-hash remove-button',
            'id': 'btn-remove-customer-note',
            'entity_label': 'Customer Note'
        }) }}
    {% endif %}
{% endblock %}

{% block pageHeader %}
    {% set title = 'Customer Note - ' ~ entity.username %}
    {% include '@OroUI/page_title_block.html.twig' with { title: title } %}
{% endblock %}

{% block content_data %}
    {% set id = 'customer-note-view' %}

    {% set dataBlocks = [
        {
            'title': 'General Information',
            'class': 'active',
            'subblocks': [
                {
                    'data': [
                        UI.renderProperty('Username', entity.username),
                        UI.renderProperty('Note', entity.note)
                    ]
                }
            ]
        }
    ] %}

    {% set data = {
        'dataBlocks': dataBlocks,
    } %}

    {{ parent() }}
{% endblock %}
