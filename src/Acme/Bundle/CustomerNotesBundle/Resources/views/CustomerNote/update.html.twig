{% extends '@OroUI/actions/update.html.twig' %}
{% import '@OroUI/macros.html.twig' as UI %}

{% set formAction = path(app.request.attributes.get('_route'), app.request.attributes.get('_route_params')) %}

{% block navButtons %}
    {{ UI.saveAndCloseButton() }}
    {{ UI.saveAndStayButton() }}
    {{ UI.cancelButton(path('acme_customer_note_index')) }}
{% endblock %}

{% block pageHeader %}
    {% if entity.id %}
        {% set title = 'Edit Customer Note' %}
    {% else %}
        {% set title = 'Create Customer Note' %}
    {% endif %}
    {% include '@OroUI/page_title_block.html.twig' with { title: title } %}
{% endblock %}

{% block content_data %}
    {% set id = 'customer-note-form' %}

    {% set dataBlocks = [
        {
            'title': 'General Information',
            'class': 'active',
            'subblocks': [
                {
                    'data': [
                        form_row(form.username),
                        form_row(form.note)
                    ]
                }
            ]
        }
    ] %}

    {% set data = {
        'dataBlocks': dataBlocks,
    } %}

    {{ parent() }}
{% endblock %}
